<div id="navnarhy_top" class=" {{{frontpagenavlightdark}}} bg-hynavbar">
    <a href="{{{ config.wwwroot }}}" class="navbar-brand aabtn">
        {{#output.get_compact_logo_url}}   
            <span class="logo ml-4">
                <img src="{{output.get_compact_logo_url}}" alt="{{sitename}}">
            </span>
        {{/output.get_compact_logo_url}}    
        {{^output.get_compact_logo_url}}
            <span class="site-name p-3">{{{ sitename }}}</span>
        {{/output.get_compact_logo_url}}   
    </a>
    <div class="navbar-nav ml-auto  pr-2">
        {{{ output.search_box }}}
    </div>
    <div id="langheader3" class="navbar-nav  pr-3">
            {{{ output.render_lang_menu }}}
    </div>
</div>
<div id="navbarhy">
    <nav class="navbar header-area {{{frontpagenavlightdark}}} bg-hynavbar navbar-expand header-wrapper moodle-has-zindex" aria-label="{{#str}}sitemenubar, admin{{/str}}">
        <div class="navbar-nav d-none d-md-flex">
            <!-- page_heading_menu -->
            {{{ output.page_heading_menu }}}
            <div class="navbar-nav mr-auto">
                {{{frontpagenavlink}}}
            </div>
        </div>
        <div class= "d-md-none d-lg-none d-xl-none">
            <div class="dropdown hydropdown">
                <a class="btn">
                {{#pix}}i/menubars{{/pix}}  
                </a>
                <div class="hynavbar-nav hydropdown-content dropright">
                    {{{frontpagenavlink-m}}}
                </div>
            </div>
        </div>
        <ul class="navbar-nav usernav ml-auto">
            <!-- user_menu -->
            <li class="nav-item align-items-center pl-2 ">
                {{{ output.user_menu }}}
            </li>
        </ul>
    </nav>
</div>
<style>
#navbarhy {
    background-color: #555;
    z-index : 999;
}
#navnarhy_top {
    height: 70px;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 0rem;
    opacity: .9;
    z-index : 99999;
}
#navnarhy_top .logo img {
    height: 45px;
}
.stickyhy {
    position: fixed;
    top: 0;
    width: 100%;
}
.stickyhy {
    padding-top: 0px;
}
.navbar-light a { 
    color: #160505 !important;
}  
.navbar-light .logo img { 
    border-radius: 3px;
    margin-left:5px;
    padding-top: 5px;
    padding-bottom: 5px;
}  
#langheader3 .dropdown-menu{
    right: 0;
    left: auto;
}
@media only screen and (max-width: 991px) {
    #navnarhy_top .logo img {
        height: 40px;
    }
    #navnarhy_top{
        height: 60px;
    }
    .simplesearchform .collapse.show,
    .simplesearchform .collapsing {
        height: 60px;
    }
}
@media only screen and (max-width: 767px) {
    #navnarhy_top .logo img {
            height: 30px;
        }
    #navnarhy_top{
        height: 55px;
    }
    .simplesearchform .collapse.show,
    .simplesearchform .collapsing {
        height: 55px;
    }
}  
</style>
{{#js}}
window.onscroll = function() {hyOnscrollFunction()};
    var navbar = document.getElementById("navbarhy");
    var sticky = navbar.offsetTop;
    function hyOnscrollFunction() {
        if (window.pageYOffset >= sticky) {
            navbar.classList.add("stickyhy")
        } else {
            navbar.classList.remove("stickyhy");
        }
}
{{/js}}